<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Type of Location</th>
      <th>Address</th>
      <th>Address2</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Reception phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.type_of_location %></td>
        <td><%= location.address %></td>
        <td><%= location.address2 %></td>
        <td><%= location.city %></td>
        <td><%= location.postal_code %></td>
        <td><%= location.country %></td>
        <td><%= location.reception_phone %></td>
        <td><%= link_to 'Show', location, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, :class => 'btn btn-success' %>
